{
  "name": "static-website-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "run-s clean dev",
    "dev": "run-p watch:** server",
    "build": "run-s clean build:**",
    "build:js": "simplifyify \"src/**/*.js\" -o dist --bundle",
    "build:html": "posthtml \"src/**/*.html\" \"!src/**/_*.html\" -a -o dist -r src",
    "build:scss": "sass --style=expanded --no-source-map src/scss:cache_css",
    "build:css": "postcss \"cache_css/**/*.css\" --base cache_css --dir dist/css",
    "clean": "run-p clean:**",
    "clean:dist": "rimraf dist",
    "clean:cache_css": "rimraf cache_css",
    "cpx": "run-p cpx:*",
    "cpx:assets": "cpx \"src/**/*.{png,jpg,gif,webp,avif,svg}\" dist",
    "watch:scss": "sass --embed-source-map --watch src/scss:dist/css",
    "watch:css": "postcss \"cache_css/**/*.css\" --base cache_css --dir dist/css --watch",
    "watch:js": "simplifyify \"src/**/*.js\" --outfile \"dist/**/*.js\" --watch",
    "lint": "run-s lint:*",
    "lint:css": "stylelint \"src/**/*.scss\" --syntax scss --config \"./.stylelintrc\"",
    "lint:js": "eslint \"src/**/*.js\" --ignore-pattern \"*.config.js\"",
    "lint:eslint": "eslint \"src/**/*.js\" --ignore-pattern \"*.config.js\"",
    "lint:prettier:js": "prettier --ignore-pattern \"*.config.js\" \"src/**/js\"",
    "lint:prettier:css": "prettier --ignore-pattern \"*.config.js\" \"src/**/js\"",
    "fix:prettier:js": "run-p lint:prettier:js --write",
    "fix:prettier:css": "run-p lint:prettier:css --write",
    "fix:js": "npm run lint:js --write",
    "server": "browser-sync start --server \"dist\" --files \"dist\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turusuke/static-website-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/turusuke/static-website-boilerplate/issues"
  },
  "homepage": "https://github.com/turusuke/static-website-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@jsdevtools/simplifyify": "^8.0.3",
    "autoprefixer": "^10.0.1",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.12",
    "core-js": "^3.6.5",
    "cpx": "^1.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "posthtml-beautify": "^0.7.0",
    "posthtml-cli": "^0.7.6",
    "posthtml-expressions": "^1.5.0",
    "posthtml-include": "^1.4.3",
    "posthtml-w3c": "^0.9.0",
    "prettier": "^2.1.2",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{png,jpeg,jpg,gif,svg}": ["imagemin-lint-staged"],
    "src/**/*.js": "eslint --cache --fix --ignore-pattern \"*.config.js\"",
    "src/**/*.{js,scss}": "prettier --write",
    "src/**/*.{scss}": "stylelint \"src/**/*.scss\" --syntax scss --config \"./.stylelintrc\""
  }
}
